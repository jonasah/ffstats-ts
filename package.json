{
  "name": "ffstats2",
  "version": "1.0.0",
  "main": "main.js",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "start": "yarn start:processing",
    "start:processing": "yarn workspace @ffstats/processing run start",
    "start:convertroster": "yarn workspace @ffstats/convertroster run start",
    "build": "echo nope",
    "test": "jest",
    "test:silent": "jest --silent",
    "format:check": "prettier --check \"**/*.ts\"",
    "format:fix": "prettier --list-different --write \"**/*.ts\"",
    "format:fix:staged": "pretty-quick --staged",
    "lint:check": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "db:migrate:make": "knex migrate:make -x ts",
    "db:migrate:latest": "knex migrate:latest",
    "db:migrate:down": "knex migrate:down"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run-s -y format:fix:staged lint:fix",
      "pre-push": "yarn run-p -y test:silent format:check lint:check"
    }
  }
}
